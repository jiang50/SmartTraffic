    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "car.cpp",
                "intersection.cpp",
                "SimulatedCity.cpp",
                "SmartServer.cpp",
                "client.cpp",
                "-o",
                "smart"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./smart",
            "args": [
                "100",
                "100000",
                "100",
                "local_smart"
            ],
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
